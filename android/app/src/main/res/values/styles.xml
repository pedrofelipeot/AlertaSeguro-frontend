<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal do app -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Tema de Splash (usado no lançamento) -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <!-- Cor de fundo do splash -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>

        <!-- Ícone animado do splash -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <!-- Fundo do ícone (transparente para ícone sem fundo) -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Duração da animação -->
        <item name="windowSplashScreenAnimationDuration">2500</item>

        <!-- Tema após a splash -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>
